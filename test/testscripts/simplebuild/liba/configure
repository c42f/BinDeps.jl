touch config.status
cat <<EOF > Makefile
ifeq (\$(OS), Darwin)
     SHLIB_EXT = dylib
     CC = clang
else
     SHLIB_EXT = so
     CC = gcc
endif

all: liba.\$(SHLIB_EXT)
liba.\$(SHLIB_EXT):
	\$(CC) -shared ../../src/liba/liba.c -o liba.\$(SHLIB_EXT)
install: liba.\$(SHLIB_EXT)
	mkdir -p ../../usr/lib
	cp liba.\$(SHLIB_EXT) ../../usr/lib
EOF
